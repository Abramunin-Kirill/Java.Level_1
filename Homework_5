package lessons.Lesson_5;

public class Employee {
        /* План класса (из презентации взял):
        1) Объявление полей класса
        2) Конструктор
        3) Объявление методов */

// 1) Объявление полей класса
    String name; //ФИО
    String position; //должность
    String email; //емейл
    String phone_number; //номер телефона
    int salary; //зарплата
    int age; //возраст

// 2) Сам конструктор
    public Employee (String name, String position, String email, String phone_number, int salary, int age) {
        this.name = name;
        this.position = position;
        this.email = email;
        this.phone_number = phone_number;
        this.salary = salary;
        this.age = age;
    }

// 3) Определение методов
// это переопределенный метод, уже на основе 6-го урока сделанный
@Override
public String toString(){
    return String.format("Имя: %s \tДолжность: %s \nEmail: %s \t Номер телефона: %s \n Зарплата: %d \t Возраст: %d \n", // Подсмотрел такой формат для вывода в консоль
            name, position, email, phone_number, salary, age);}

// вывод в консоль (для 5-го задания)
    public void print(){
        System.out.println(this);
    }
}


// Второй класс с массивом и циклом
package lessons.Lesson_5;

public class Homework_5 {
    public static void main(String[] args) {
        Employee[] persArray = new Employee[5];
        persArray[0] = new Employee("Ильинская София Георгиевна", "CEO", "IlinskaaySG-ST@mail.ru", "+79996665544", 200000, 35);
        persArray[1] = new Employee("Куликова Арина Романовна", "Team Lead", "KulikovaAR-ST@mail.ru", "+79998884455", 110000, 33);
        persArray[2] = new Employee("Сергеева Василиса Семёновна", "QA-engineer", "SergeevaVS-ST@mail.ru", "+79997771234", 69000, 24);
        persArray[3] = new Employee("Богданова Софья Владимировна", "Software Developer", "BogdanovaSV-ST@mail.ru", "+79995554789", 90000, 48);
        persArray[4] = new Employee("Филатов Мирослав Константинович", "System Engineer", "FilatovMK-ST@mail.ru", "+79994445896", 75000, 53);

        // Цикл для 5-го задания
        for (int i=0; i < persArray.length; i++)
            if (persArray[i].age > 40) persArray[i].print();
        }
}




